
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Dashboard</h1>
            </div>

            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Dashboard </li>
                </ol>
            </div>
        </div>
    </div>
</div>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-4">
                Select Category:
                <select id="categoryId" name="CategoryId">
                    @foreach (var i in ViewBag.categories)
                    {
                        <option value="@i.CategoryId">@i.CategoryName</option>
                    }
                </select>
            </div>
            <div class="col-8">
                <button id="visualize" type="button" class="btn btn-info">Visualize</button>
            </div>

            <div class="col-12">
                <canvas id="chart1" width="400" height="400"></canvas>
            </div>

            <div class="col-12">
                <canvas id="chart2" width="400" height="400"></canvas>
            </div>

            <div class="col-12">
                <canvas id="chart3" width="400" height="400"></canvas>
            </div>

            <div class="col-12">
                <canvas id="chart4" width="400" height="400"></canvas>
            </div>
        </div>
    </div>
</section>

@section scripts {
    <script>
        $("#visualize").on("click", () => {
            $.ajax({
                url: "@Url.Action("GetCategoryUsersInfo", "Home")?categoryId=" + $("#categoryId").val(),
                success: (result, status, xhr) => {
                    console.log(result);
                },
                error: (xhr, status, error) => {
                    alert("Error: " + status + " " + error + " " + xhr.status + " " + xhr.statusText);
                }
            });
        });

    </script>
}
